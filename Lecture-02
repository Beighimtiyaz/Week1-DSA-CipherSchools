#include <iostream>

int addNumbers(int a, int b);

int addNumbers(int a, int b) {
    int sum = a + b;
    return sum;
}

int main() {
    int num1, num2, result;

    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    result = addNumbers(num1, num2);

    std::cout << "The sum of " << num1 << " and " << num2 << " is: " << result << std::endl;

    return 0;
}
