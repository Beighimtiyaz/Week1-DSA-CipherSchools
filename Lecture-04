#include <iostream>

int factorial(int n) {
    // Base case: factorial of 0 is 1
    if (n == 0) {
        return 1;
    }

    return n * factorial(n - 1);
}

int main() {
    int num;

    std::cout << "Enter a positive integer: ";
    std::cin >> num;

    int result = factorial(num);

    std::cout << "The factorial of " << num << " is: " << result << std::endl;

    return 0;
}
